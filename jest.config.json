{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
      ],
      "rootDir": "./src",
      "testRegex": ".*\\.(spec|test)\\.ts$",
      "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
      },
      "collectCoverageFrom": [
        "**/*.ts"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node",
      "bail": 3,
      "coverageReporters": ["html", "json"],
      "slowTestThreshold": 10,
      "coveragePathIgnorePatterns": [
        "/helpers/testHelpers",
        "/index"
      ]
}